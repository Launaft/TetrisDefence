<Window x:Class="TetrisDefence.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TetrisDefence"
        mc:Ignorable="d"
        Title="HelpWindow" Height="720" Width="1280">
    <Grid>
        <Viewbox>
            <Grid x:Name="Page_Grid" Width="1280" Height="722">
                <Button x:Name="NextBtn" Content="Next Page" HorizontalAlignment="Left" Height="90" Margin="970,620,0,0" VerticalAlignment="Top" Width="300" FontSize="48" FontFamily="Impact" Background="#66DDDDDD" Click="NextBtn_Click"/>
                <Button x:Name="PreviousBtn" Content="Previous Page" HorizontalAlignment="Left" Height="90" Margin="10,620,0,0" VerticalAlignment="Top" Width="300" FontSize="48" FontFamily="Impact" Background="#66DDDDDD" Click="PreviousBtn_Click"/>
            </Grid>
        </Viewbox>
    </Grid>
</Window>
